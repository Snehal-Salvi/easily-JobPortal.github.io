<!-- Applicants View -->
<div class="layout-container">
  <h1 class="form-heading">Applicants List</h1>
  <div class="container">
      <table class="table table-striped">
          <thead>
              <tr>
                <th scope="col">ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Contact</th>
                  <th scope="col">Company Name</th>
                  <th scope="col">Job Role</th>
                  <th scope="col">Resume</th>
              </tr>
          </thead>
          <tbody>
              <% applicants.forEach(applicant => { %>
                  <tr>
                    <td><%= applicant.applicants_id %></td>
                      <td><%= applicant.applicants_name %></td>
                      <td><%= applicant.applicants_email %></td>
                      <td><%= applicant.applicants_contact %></td>
                      <td><%= applicant.companyname %></td> 
                      <td><%= applicant.jobrole %></td> 
                      <td> <a class="btn btn-sm btn-primary" href="<%= applicant.pdfPath %>" target="_blank">View</a></td>
                  </tr>
              <% }); %>
          </tbody>
      </table>
  </div>
</div>
