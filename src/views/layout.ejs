<!-- Common Layout page for all views -->
<!DOCTYPE html>
<html lang="en"><head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
    <script src="https://kit.fontawesome.com/0b69d70df4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/CSS/style.css">
    <link rel="stylesheet" href="/CSS/jobsStyle.css">
    <link rel="stylesheet" href="/CSS/viewdetails.css">
    <link rel="stylesheet" href="/CSS/login.css">
    <script src="/JS/script.js"></script>
    
    <title>Job Portal</title>
</head>

<body>
  
    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container-fluid">
            <a class="navbar-brand text-light" href="/">easily</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link active text-light" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/new">Jobs</a>
                    </li>
                    <li class="nav-item dropdown">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <% if (locals.userName) { %>
                                    <%= userName %>
                                <% } else { %>
                                    Recruiter
                                <% } %>
                            </a>
                        <ul class="dropdown-menu">
                            <% if(locals.userEmail){%>
                                <li class="nav-item">
                                    <a class="dropdown-item text-dark" href="/logout">Logout</a>
                                </li>
                                <%} else{%>

                            <li><a class="dropdown-item text-dark" href="/login">Login</a></li>
                            
                            <%}%>

                            <li><hr class="dropdown-divider"></li>
                                <!-- Content for logged-in users -->     
                           <li><a class="dropdown-item text-dark" href="/newjob">Post New job</a></li>
                         
                        </ul>
                    </li>
                </ul>
    
                <form action="/search" method="post" class="d-flex">                  
                    <input  class="form-control me-2" type="text" name="name" placeholder="Search by name">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                  </form>               
            </div>
        </div>
    </nav>
       
         <!-- Placeholder for rendering  content inside this div-->
         <%- body %>
</body>
</html>