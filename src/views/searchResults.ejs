<!-- Search Result View -->

<% if (jobs.length == 0) { %>
  <div class="container my-2 text-danger">
    <h1>Oops! No jobs matching your search were found</h1>
  </div>
<% } else { %>
  <div class="container p-5 gap-2 d-flex flex-wrap">
    <% jobs.forEach((job) => { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= job.name %></h5>
          <p class="card-text"><%= job.role %></p>
          <hr>
          <p class="card-text"><i class="fa-solid fa-location-dot"></i> <%= job.location %></p>
          <p class="card-text"><i class="fa-solid fa-indian-rupee-sign rs-icon "></i> <%= job.lpa %> LPA</p>
          <button disabled class="skills"><%= job.skills.join(', ') %></button>
          <p class="card-text"><%= job.no_of_openings %> Openings</p>
          <p class="card-text">Apply by: <%= job.apply_by %></p>
          <a href="/view-details/<%= job.id %>" class="btn btn-primary view-details-button">View Details</a>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
